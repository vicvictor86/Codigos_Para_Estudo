TimerWidget:
 
<TimerWidget>:
 
    BoxLayout:
        orientation:'vertical'
        cols: 1
        spacing: 20
        padding: [10,10]
 
        BoxLayout:
            orientation: 'vertical'
            Label
                text:'Cronometro bala'
                font_size: 50
 
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text:root.ValueText 
                id: valor_cronometro
                font_size: 70
                color: [1,0,0,1]           
 
        GridLayout:
            cols: 4
            spacing: 20
            padding: [10,10]
 
            Button:
                text: 'Iniciar'
                id: but_iniciar
                on_press: root.start()
            Button:
                text: 'Parar'
                id: but_parar
                on_press: root.stop()
 
            Button:
                text: 'Reiniciar'
                id: but_reiniciar
                on_press: root.restart()
 
            Button:
                text: 'Zerar'
                id: but_zerar
                on_press: root.reset()