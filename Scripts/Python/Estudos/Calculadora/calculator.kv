<CustomButton@Button>:
    font_size: 32
    size_hint: 0.2, 0.8

<CalcGrid>
    id: calculator
    display: entry
    rows: 6
    spacing: 5
    padding: 5

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            
    BoxLayout:
        spacing:10
        CustomButton:
            text: "7"
            on_press: entry.text += self.text
        CustomButton:
            text: "8"
            on_press: entry.text += self.text
        CustomButton:
            text: "9"
            on_press: entry.text += self.text
        CustomButton:
            text: "+"
            on_press: entry.text += self.text

    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "4"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "5"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "6"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "-"
            on_press: entry.text += self.text 
   
    BoxLayout: 
        spacing: 10
        CustomButton: 
            text: "1"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "2"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "3"
            on_press: entry.text += self.text 
        CustomButton: 
            text: "*"
            on_press: entry.text += self.text
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "AC"
            on_press: entry.text = ""
        CustomButton:
            text: "0"
            on_press: entry.text += self.text
        CustomButton:
            text: "="
            on_press: calculator.calculate(entry.text)
        CustomButton:
            text: "/"
            on_press: entry.text += self.text
    BoxLayout: 
        CustomButton:
            font_size: 20
            text: "Calculator top"
            on_press: entry.text += ""